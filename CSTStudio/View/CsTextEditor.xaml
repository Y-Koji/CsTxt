<UserControl x:Class="CSTPad.View.CsTextEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CSTPad.View"
             mc:Ignorable="d" 
             xmlns:vKit="clr-namespace:WpfKit.ViewKit;assembly=WpfKit"
             xmlns:vm="clr-namespace:CSTPad.ViewModel"
             d:DataContext="{d:DesignInstance Type={x:Type vm:CsTextEditorViewModel}}"
             d:DesignHeight="450" 
             d:DesignWidth="800">

    <vKit:Element.DataContext>
        <vm:CsTextEditorViewModel />
    </vKit:Element.DataContext>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Background="#3CF">
            <TextBlock
                Text="CSharp Text" 
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="#EEE"
                FontSize="15"/>
        </Grid>
        <Grid Grid.Row="1">
            <TextBox Text="{Binding Text}" Background="#AAF" AcceptsReturn="True" />
        </Grid>
    </Grid>
</UserControl>
